<Window x:Class="WPFApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApplication"
        mc:Ignorable="d"
        Title="Greetings" Height="450" Width="800">
    <Grid Margin="0,70,-0.4,-70">
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Select a message option and then choose the Display button." VerticalAlignment="Center" Margin="48,87,0,305" Width="324" Height="28"/>
        <RadioButton x:Name="HelloButton" Content="Hello" HorizontalAlignment="Left" Margin="47,116,0,289" VerticalAlignment="Center" IsChecked="True"/>
        <RadioButton x:Name="GoodbyeButton" Content="Goodbye" HorizontalAlignment="Left" Margin="143,116,0,289" VerticalAlignment="Center"/>
        <Button x:Name="button" Content="Display" HorizontalAlignment="Left" Margin="47,146,0,255" VerticalAlignment="Center" Width="75" Click="button_Click"/>
    </Grid>
</Window>
